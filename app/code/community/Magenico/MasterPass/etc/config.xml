<config>
    <modules>
        <Magenico_MasterPass>
            <version>1.0.0</version>
        </Magenico_MasterPass>
    </modules>
    <global>
        <models>
            <magenico_masterpass>
                <class>Magenico_MasterPass_Model</class>
            </magenico_masterpass>
        </models>
		
        <helpers>
            <magenico_masterpass>
                <class>Magenico_MasterPass_Helper</class>
            </magenico_masterpass>
        </helpers>	
    </global>
    <frontend>
        <events>
            <controller_action_postdispatch_customer_account_loginPost>
                <observers>
                    <magenico_masterpass_observer>
                        <type>singleton</type>
                        <class>magenico_masterpass/observer</class>
                        <method>postdispatchCustomerAccountLoginPost</method>
                    </magenico_masterpass_observer>
                </observers>
            </controller_action_postdispatch_customer_account_loginPost>
        </events>
    </frontend>
    <default>
        <magenico_masterpass>
            <general>
                <active>0</active>
                <debug_enabled>1</debug_enabled>
                <master_password backend_model="adminhtml/system_config_backend_encrypted" />
            </general>
        </magenico_masterpass>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <magenico_masterpass>
                                            <title>General</title>
                                        </magenico_masterpass>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
